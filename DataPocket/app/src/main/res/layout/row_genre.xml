<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp">

    <TextView
        style="@style/genre_title"
        android:id="@+id/genreTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"/>

    <TextView
        style="@style/genre_message"
        android:id="@+id/genreMessage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/genreTitle"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/genreImage"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/devider_nomal"
        android:layout_below="@+id/genreImage"
        android:background="@color/white"></View>

</RelativeLayout>